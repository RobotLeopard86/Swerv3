<?xml version="1.0" encoding="UTF-8"?>
<profiles version="21">
  <profile kind="CodeFormatterProfile" name="Leopard Java" version="21">
    <!-- Indentation settings -->
    <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="tab"/>
