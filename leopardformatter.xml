    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_paren_in_for" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_paren_in_while" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_paren_in_switch" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_paren_in_catch" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_paren_in_synchronized" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_paren_in_try" value="false"/>

    <!-- Chained calls -->
    <setting id="org.eclipse.jdt.core.formatter.alignment_for_selector_in_method_invocation_chain" value="16"/> <!-- WRAP_INDENT -->
    <setting id="org.eclipse.jdt.core.formatter.join_wrapped_lines" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="120"/>

    <!-- Tabs only -->
    <setting id="org.eclipse.jdt.core.formatter.use_tabs_only_for_leading_indentations" value="false"/>
